<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.sapient.oms.entity.Product" table = "product">
      <meta attribute = "class-description">
         This class contains the product blueprint. 
      </meta>
      <id name = "productId" type = "int" column = "productId">
         <generator class="native"/>
      </id>
      
      <property name = "title" column = "title" type = "string"/>
      <property name = "price" column = "price" type = "float"/>
      <property name = "mfg" column = "mfg" type = "date"/>
      <property name = "exp" column = "exp" type = "date"/>
      
   </class>
</hibernate-mapping>